{% set description = summary %}
{% extends "layouts/base.njk" %}

{% block content %}
<article class="wrapper">
  <header class="page-header">
    <h1>{{ title }}</h1>
    <p class="meta mbe-m">
      {{ blog[locale].posted }} <time datetime="{{ date }}">{{ date | formatDate(locale) }}</time>
    </p>
    {% if summary %}
    <div class="mbe-l">
      {{ summary | renderMarkdown | safe }}
    </div>
    {% endif %}
  </header>

  <div class="flow page-content">
    {{ content | safe}}
  </div>
</article>
{% endblock %}